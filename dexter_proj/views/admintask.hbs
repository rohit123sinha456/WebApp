{{>adminnavbar}}
<h2 style="text-align: center;color: BLack"> USER TASK</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>NAME</th>
            <th>WORKER ID</th>
            <th>TASK</th>
            <th>SITE</th>

            <th></th>
        </tr>
    </thead>
    <tr>
    </tr>
    {{#each databaseinfo}}
    <tr>
        <td>{{ this.taskname }}</td>
        <td>{{ this.tasksite }}</td>
        <td>{{ this.taskdeptloc }}</td>
        <td>SITE 1</td>
        <td>
            <form action="/deleteusertask" method="POST">
                <input type="submit" class="btn btn-success" id="btn2" name="deleteusertask">
            </form>
        </td>
    </tr>
    {{/each}}
</table>
<br />
<br />
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addtaskModal">Add Task</button>


<div class="modal fade" id="addtaskModal">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form action="/addusertask" method="POST">
                <div class="modal-header">
                    <h4 class="modal-title">Add Task</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>


                <div class="modal-body">
                     <div class="form-group">
                        <label for="pid" class="text-uppercase font-weight-bold text-primary">WID</label>
                        <input type="text" name="wid" class="form-control" placeholder="Enter the WID" required>
                    </div>

                    <div class="form-group">
                        <label for="pid" class="text-uppercase font-weight-bold text-primary">Task Name</label>
                        <input type="text" name="taskname" class="form-control" placeholder="Enter the taskname" required>
                    </div>


                    <div class="form-group">
                        <label for="pid" class="text-uppercase font-weight-bold text-primary">Task Site</label>
                        <input type="text" name="tasksite" class="form-control" placeholder="Enter the tasksite" required>
                    </div>
                </div>


                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>